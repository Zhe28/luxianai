{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.web.json"
    }
  ],
  "include": [
    "../shared/**/*",
    "../pc/**/*",
    "./src/renderer/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@shared-components/*": [
        "../shared/components/*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@/*": [
        "../pc/src/*"
      ]
    }
  }
}
